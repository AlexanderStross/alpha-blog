<!-- Content -->
<div class="wow fadeIn">
  <h1 class="text-center mb-4"><%= @user.username %>'s profile</h1>

  <%= gravatar_for @user, size: 200 %>

  <div class="text-center mt-4">
    <% if logged_in? && (@user == current_user || !current_user.admin?) %>
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
    <% end %>
    <% if logged_in? && (@user == current_user  || current_user.admin?) %>
      <% unless @user == current_user && (User.where(:admin => true).count < 2) %>
        <%= link_to 'Delete Account', user_path(current_user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-light btn-lg col-auto ms-4 text-danger" %>
       <% end %>
     <% end %>
    <% if logged_in? && @user != current_user &&current_user.admin? %>
    <%= link_to "Promote to Admin", user_path(current_user), data: {confirm: "Are you sure?"}, class: "btn btn-outline-info" %>
    <% end %>
   </div>

  <h3 class="text-center mt-4">Articles</h3>
  <div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
  </div>
  <%= render 'articles/articles' %>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>

<!-- End Content -->
