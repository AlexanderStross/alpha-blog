<!-- Content -->
<div class="wow fadeIn">
  <h1 class="text-center mb-4"><%= @user.username %>'s profile <span id="user-status-user-<%= @user.id %>" class="text-info"><%= "(admin)" if @user.admin%></span></h1>

  <%= gravatar_for @user, size: 200 %>

  <div class="text-center mt-4">
    <% if logged_in? && (@user == current_user || !current_user.admin?) %>
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-primary ms-1 me-1" %>
    <% end %>
    <% if logged_in? && (@user == current_user  || current_user.admin?) %>
      <% unless current_user.admin? && (User.where(:admin => true).count < 2) %>
        <%= link_to 'Delete Account', user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger col-auto ms-1 me-1" %>
       <% end %>
     <% end %>
    <div class="user-<%= @user.id %>">
    <% if logged_in? && @user != current_user &&current_user.admin? %>
    <%= link_to "#{ @user.admin ? 'Demote from Admins' : 'Promote to Admins' }", toggle_admin_user_path(@user), method: :patch, remote: :true, data: {confirm: "Are you sure?"}, class: "btn btn-outline-#{ @user.admin ? 'danger' : 'secondary' } mt-2 mb-2"  %>
    <% end %>
    </div>
   </div>

   <div class="mb-3 text-center">
     <%= link_to '[ Back ]', url_for(:back), class: "link-secondary" %>
   </div>

  <h3 class="text-center mt-4">Articles</h3>
  <div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
  </div>
  <%= render 'articles/articles' %>
  <div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>
</div>

<!-- End Content -->
