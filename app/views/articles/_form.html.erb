<div class="container">
  <%= render 'shared/errors' %>
  <div class="justify-content-center">
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row shadow p-3 mb-3 bg-info rounded">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :description,rows: 10, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "col-2 btn btn-outline-light btn " %>
      </div>
    <% end %>
    <%= link_to '[ Cancel ]', articles_path, class: "justify-content-center" %>
  </div>
</div>
