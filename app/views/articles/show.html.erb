<!-- Content -->
<div class="wow fadeIn">
  <h4 class="text-center"><%= @article.title %></h4>
  <div class="container">

    <div class="row justify-content-md-center">
      <div class="col-10 mt-3">
        <div class="card text-center shadow mb-3 bg-white rounded">
          <div class="card-header fst-italic">
            by
            <%= link_to @article.user.username, user_path(@article.user), class: "link-secondary" %>
            <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
          </div>
          <div class="card-body">
            <div class="card-text text-start"><%= simple_format(@article.description) %></div>
            <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
              <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-primary" %>
              <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created
              <%= time_ago_in_words(@article.created_at) %>
              ago, edited
              <%= time_ago_in_words(@article.updated_at) %>
              ago
            </small>
            <div class="mt-3">
              <% if @categories.any? %>
                <% @categories.each do |category| %>
                <% cache category do %>
                  <%= link_to((category.name + " " + content_tag(:span, category.article_count, :class => "badge bg-primary shadow rounded-pill")).html_safe, category_path(category.id), class: "btn btn-secondary shadow btn-sm mb-1") %>
                <% end %>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="mb-3 text-center">
          <%= link_to '[ Return to Index ]', articles_path, class: "link-secondary"%>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End Content -->
