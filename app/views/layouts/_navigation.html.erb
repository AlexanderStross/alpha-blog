<!-- Navbar -->
<nav class="navbar shadow fixed-top navbar-expand-lg navbar-dark scrolling-navbar p-md-1 nav">
  <div class="container">

    <!-- Brand -->
    <%= link_to "Alpha Photography Blog", root_path, class: "navbar-brand text-light text-uppercase", id: "logo" %>

    <!-- Collapse -->

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Links -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">


    <!-- Right -->
    <div class="mx-auto mr-auto"></div>
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link text-light" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link text-light" %>
        </li>
        <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
           Blog
         </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
          <li><%= link_to "View Articles", articles_path, class: "dropdown-item text-gray" %></li>
          <li><%= link_to "View Contributors", users_path, class: "dropdown-item text-gray" %></li>
          <li><%= link_to "View Categories", categories_path, class: "dropdown-item text-gray" %></li>
          <% if logged_in? %>
          <li><hr class="dropdown-divider"></li>
          <li><%= link_to "New Article", new_article_path, class: "dropdown-item text-gray" %></li>
          <% else %>
          <li><%= link_to "Sign up", signup_path, class: "dropdown-item text-gray" %></li>
          <% end %>
         </ul>
          <% if !!get_featured_Categories %>
          <li class="nav-item dropdown">
           <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
           Featured
         </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        <% get_featured_Categories.each do |fc| %>
          <% cache fc do %>
           <li id="featured-link-<%= fc.id %>"><%= link_to fc.name, category_path(fc), class: "dropdown-item text-gray" %></li>
          <% end %>
        <% end %>
         </ul>
        <% end %>
       </li>
        <!-- <li class="nav-item">
          <%= link_to "Pricing", pricing_path, class: "nav-link text-light" %>
        </li> -->
        <li class="nav-item">
          <%= link_to "Contact", contact_path, class: "nav-link text-light" %>
        </li>
        <% unless logged_in? %>
        <li class="nav-item">
          <%= link_to "Log in", login_path, class: "nav-link text-light" %>
        </li>
        <% else %>
        <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
           Hi, <%= current_user.username %>
           <%= " (Admin)" if current_user.admin? %>
         </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
          <li><%= link_to "View Profile", user_path(current_user), class: "dropdown-item text-gray" unless current_page?(user_path(current_user)) %></li>
          <li><%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item text-gray" unless current_page?(edit_user_path(current_user)) %></li>
          <li><hr class="dropdown-divider"></li>
          <li><%= link_to "Log out", logout_path, method: :delete, class: "dropdown-item text-gray" %></li>
         </ul>
       </li>
       <% end %>
      </ul>
    </div>
  </div>
</nav>
  <!-- end Navbar -->
